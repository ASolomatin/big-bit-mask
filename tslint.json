{
    "defaultSeverity": "error",
    "extends": [
        "tslint:recommended",
        "tslint-microsoft-contrib/recommended"
    ],
    "linterOptions": {
        "exclude": [
            ".nyc_output/**/*",
            ".vscode/*",
            "coverage/**/*",
            "dist/**/*",
            "node_modules/**/*"
        ]
    },
    "jsRules": {},
    "rules": {
        "array-type": false,
        "no-bitwise": false,
        "no-unused-expression": false,
        "object-literal-sort-keys": false,
        "prefer-type-cast": false
    },
    "rulesDirectory": [
        "node_modules/tslint-microsoft-contrib"
    ]
}